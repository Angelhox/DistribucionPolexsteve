<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pedido"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pedido"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tituloDatosPedido"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Datos... "
            android:paddingVertical="10dp"
            android:textSize="16dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTituloNumeroPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Numero Pedido: "/>
            <TextView
                android:paddingLeft="20dp"
                android:id="@+id/tvNumeroPedido"
                android:layout_toEndOf="@+id/tvTituloNumeroPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000001"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTituloFechaPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Fecha Pedido: "/>
                <TextView
                    android:paddingLeft="20dp"

                    android:id="@+id/tvFechaPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunes 03/ Junio /2023"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTituloUsuarioPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Cliente: "/>
            <TextView
                android:paddingLeft="20dp"

                android:id="@+id/tvNombreUsuarioPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Alcoser Ruiz"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTituloIdUsuarioPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Cedula/Ruc: "/>
            <TextView
                android:paddingLeft="20dp"

                android:id="@+id/tvIdUsuarioPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1712246379"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTituloTelefonoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Telefono: "/>
            <TextView
                android:paddingLeft="20dp"

                android:id="@+id/tvTelefonoUsuarioPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0998171432"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTituloCorreoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Correo: "/>
            <TextView
                android:paddingLeft="20dp"

                android:id="@+id/tvCorreoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="juanalcoser@gmail.com"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTituloDireccionPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Direccion: "/>
            <TextView
                android:paddingLeft="20dp"

                android:id="@+id/tvDireccionPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cayambe Miraflores del Yaznan y Rosalia Arteaga"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTituloDetallesPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Detalles... "/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:textStyle="bold"
            android:text="Producto "/>
        <TextView
            android:id="@+id/tvUnidadMedidaDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"

            android:textStyle="bold"
            android:text="Unidad"/>
        <TextView
            android:id="@+id/tvCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:text="Cantidad"/>
        <TextView
            android:id="@+id/tvPrecioUnitario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:text="Subtotal"/>
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:text="Total "/>


    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</ScrollView>
</LinearLayout>